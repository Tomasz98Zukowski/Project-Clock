@using Microsoft.AspNetCore.Mvc.Localization
@using ProjectClock.BusinessLogic.Dtos.AccountDtos

@model EditEmailDto

@inject IViewLocalizer Localizer

<h1 class="text-center p-2">@Localizer["AccEmail"]</h1>

<br>
<div class="row justify-content-center">
    <div class="col-md-4">
        @if (Model is not null && Model.Result.NewEmailAlreadyInUse)
        {
            <p class="text-warning text-bg-warning p-1">@Localizer["AccEmailUsed"]</p>
        }
        @if (Model is not null && Model.Result.NewEmailIsCurrentEmail)
        {
            <p class="text-warning text-bg-warning p-1">@Localizer["AccEmailOld"]</p>
        }
        @if (Model is not null && Model.Result.EmailsArentEqual)
        {
            <p class="text-warning text-bg-warning p-1">@Localizer["AccEmailEqual"]</p>
        }
        @if (Model is not null && Model.Result.CurrentEmailIsIncorrect)
        {
            <p class="text-warning text-bg-warning p-1">@Localizer["AccEmailWrong"]</p>
        }
        <form id="editemail" method="post">
            <div class="form-floating my-2">
                <input asp-for="@Model.CurrentEmail" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.CurrentEmail" class="form-label">Email</label>
                <span asp-validation-for="@Model.CurrentEmail" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="@Model.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.NewEmail" class="form-label">@Localizer["NEmail"]</label>
                <span asp-validation-for="@Model.NewEmail" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="@Model.NewEmailRepeat" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.NewEmailRepeat" class="form-label">@Localizer["REmail"]</label>
                <span asp-validation-for="@Model.NewEmailRepeat" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input value="@Localizer["Change"]" type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

