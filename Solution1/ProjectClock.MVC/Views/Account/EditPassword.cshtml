@using ProjectClock.BusinessLogic.Dtos.AccountDtos

@model EditPasswordDto

<h1 class="text-center p-2">Change a password</h1>

<br>
<div class="row justify-content-center">
    <div class="col-md-4">
        @if (Model is not null && !Model.Result.PasswordsAreEqual)
        {
            <p class="text-warning text-bg-warning p-1">Passwords aren't equal.</p>
        }
        @if (Model is not null && Model.Result.WrongCurrentPassword)
        {
            <p class="text-warning text-bg-warning p-1">Insert incorrect password!</p>
        }
        @if (Model is not null && Model.Result.NewPasswordIsOldPassword)
        {
            <p class="text-warning text-bg-warning p-1">New and old password are equal!</p>
        }
        <form id="EditPassword" method="post">
            <div class="form-floating my-2">
                <input type="password" asp-for="@Model.CurrentPassword" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.CurrentPassword" class="form-label">Password</label>
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input type="password" asp-for="@Model.NewPassword" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.NewPassword" class="form-label">New password</label>
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input type="password" asp-for="@Model.ConfirmNewPassword" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="@Model.ConfirmNewPassword" class="form-label">Repeat password</label>
                <span asp-validation-for="@Model.ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input value="Change" type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

