@using Microsoft.AspNetCore.Mvc.Localization
@using ProjectClock.BusinessLogic.Dtos.Project.ProjectDtos

@inject IViewLocalizer Localizer

@model IEnumerable<ProjectDto>

      @{
          var successMessage = TempData["SuccessMessage"] as string;
          var errorMessage = TempData["ErrorMessage"] as string;
       }


<h1 class="text-center p-2">@Localizer["StartTrack"]</h1>
<br>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form id="home" method="post">
            <div class="form-group mb-3">
                <label for="ProjectName" class="control-label">@Localizer["Project"]</label>
                <select name="ProjectName" class="form-select form-select-lg">
                    @foreach (var project in @Model)
                    {
                        <option value="@project.Name">@project.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-3">
                <input value="Start" type="submit" class="btn btn-primary">
            </div>
        </form>
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success" role="alert">
                @successMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }
    </div>
</div>

